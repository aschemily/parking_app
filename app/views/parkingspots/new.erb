<h1>New Parking Spot </h1>

<ul>
  <% if @errors %>
    <% @errors.each do |error| %>
    <li> <%= error %> </li>
    <% end %>
  <% end%>
</ul>


<%= form_for @parkingspot do |f| %>
  <%= f.label :street_address %>:
  <%= f.text_field :street_address %><br />

  <%= f.label :city %>:
  <%= f.text_field :city %><br />

  <%= f.label :state %>:
  <%= f.text_field :state %><br />

  <%= f.label :zipcode %>:
  <%= f.number_field :zipcode %><br />

  <%= f.label :car_type, 'Parking Size:' %>:
  <%= f.select :car_type, options_for_select(["SUV", "Sedan", "Smart Car"]) %><br />

  <%= f.label :status %>
  <%= f.select :status, options_for_select(["Available", "Occupied"]) %><br />

  <%= f.label :neighborhood, 'Please select a neighborhood below:' %>
  <%= f.collection_select :neighborhood_id, @neighborhoods, :id, :neighborhood %><br />

  <%= f.submit %><br />
<% end %>
