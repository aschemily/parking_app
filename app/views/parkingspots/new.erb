<h1>New Parking Spot </h1>

<% if @errors %>
  <div id="error_explanation">
          <ul>
            <% @errors.each do |error| %>
          <li> * <%= error %> </li>
        <% end %>
      <% end%>
    </ul>
  </div>



  <div class="container">

  <%= form_for @parkingspot do |f| %>


    <div class="labels"><%= f.label :street_address %>:</div>
    <div class="boxes"> <%= f.text_field :street_address%></div><br />


    <div class="labels"><%= f.label :city %>:</div>
    <%= f.text_field :city, :class=>"span5"  %><br />

  <div class="labels">  <%= f.label :state %>:</div>
    <%= f.text_field :state, :class=>"span5"  %><br />

    <div class="labels"><%= f.label :zipcode %>:</div>
    <%= f.number_field :zipcode, :class=>"span5"  %><br />

    <div class="labels"><%= f.label :car_type, 'Parking Size' %>:</div>
      <%= f.select :car_type, options_for_select(["SUV", "Sedan", "Smart Car"]),{class: "form-control"} %>
    <br />

    <div class="labels"><%= f.label :status %></div>

    <%= f.select :status, options_for_select(["Available", "Occupied"]),{class: "form-control"}%><br />

    <div class="labels">  <%= f.label :neighborhood, 'Please select a neighborhood below:' %></div>

    <%= f.collection_select :neighborhood_id, @neighborhoods, :id, :neighborhood, {class: "form-control"}%><br />

    <%= f.submit %><br />
  <% end %>

</div>


  </div>
