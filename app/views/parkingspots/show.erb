<h1>Parking Address </h1>

<div id="show-page">



<div class="labels"> Street Address: </div>
<div class="show-content"> <%= @parkingspot.street_address %></div></br>

<div class="labels">City:</div>
<div class="show-content"> <%=  @parkingspot.city%></div></br>

<div class="labels">State:</div>
<div class="show-content"> <%= @parkingspot.state%></div></br>

<div class="labels">Zipcode:</div>
<div class="show-content"> <%=  @parkingspot.zipcode%></div></br>

<div class="labels">Parking Size:</div>
<div class="show-content"> <%=  @parkingspot.car_type%></div></br>

<div class="labels">Neighborhood:</div>
<div class="show-content"> <%= @parkingspot.neighborhood.neighborhood%></div></br>

<div class="labels">Status:</div>
<div class="show-content"> <%= @parkingspot.status %></div>


<% if @parkingspot.status == "Available" %>
  <%= button_to "Park", status_path, method:"get", class:"btn btn-success btn-sm" %>
<% else %>
  <%= button_to "Leave", status_path, method:"get", class:"btn btn-danger btn-sm"%>
<% end %>



<%= button_to "All Parking Spots", parkingspots_path, method:"get", class:"btn-secondary btn-sm" %>
<%= button_to "Home", '/', method:"get", class:"btn-secondary btn-sm" %>
</div>
